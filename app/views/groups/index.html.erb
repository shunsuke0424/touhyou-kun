<div class="main">
  <div class="container-fluid fw-bold">
    <div class="row justify-content-center mt-5">
      <div class="col-lg-6 col-sm-6 col-10 text-center">
        <div class="title fw-bold mb-5">さあ、どの部屋に行く？</div>
        <ul class="list-group list-group-flush py-3">
          <% @groups.each do |group| %>
          <li class="list-group-item">
            <div class="d-flex justify-content-between">
              <div class="name-text py-3 p-md-3 text-start">
                <%= group.name %>
                (<%= group.users.where(disabled: false).count %>)
                <div class="group-id text-secondary d-none d-md-block">
                  ID: <%= group.id_token%></div>
              </div>
              <div class="button-container d-flex align-items-center">
                <div class="me-2">
                  <%= link_to("部屋に入る", "/groups/#{group.id_token}", class: "vote-text text-decoration-none vote-button-container") %>
                </div>
              </div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>