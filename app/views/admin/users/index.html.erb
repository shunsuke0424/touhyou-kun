<div class="main">
  <div class="container-fluid fw-bold">
    <div class="row justify-content-center mt-5">
      <div class="col-lg-6 col-sm-6 col-10 text-center">
        <ul class="list-group list-group-flush py-3">
          <% @users.each do |user| %>
          <% unless user.name.start_with?("ゲストユーザ") %>
          <li class="list-group-item">
            <div class="d-flex justify-content-between">
              <div class="name-text py-3 p-md-3">
                <% if user.disabled %>
                <i class="fa-regular fa-circle-stop text-danger"></i>
                <% else %>
                <i class="fa-regular fa-circle-play text-success"></i>
                <% end %>
                <%= user.name %>
              </div>
              <div class="button-container d-flex align-items-center">
                <div class="me-2">
                  <%= link_to("削除する", "/admin/users/destroy/#{user.id}", method: "post", class: "btn btn-danger text-decoration-none") %>
                </div>
                <div class="me-0 mx-md-3">
                  <%= link_to("結果を見る", "/users/ranking/#{user.id}", class: "btn btn btn-outline-secondary") %>
                </div>
              </div>
            </div>
          </li>
          <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>